generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Currency {
  PLN
  EUR
  USD
}

enum Language {
  PL
  EN
}

model Settings {
  id       String   @id @default(cuid())
  userId   String   @unique
  currency Currency
  language Language
}

model Budget {
  id             String           @id @default(cuid())
  name           String
  description    String?
  goal           Float?
  userId         String           @unique
  BudgetCategory BudgetCategory[]
}

model BudgetCategory {
  id       String             @id @default(cuid())
  name     String
  budgetId String
  type     BudgetCategoryType
  goal     Float?
  budget   Budget             @relation(fields: [budgetId], references: [id])
}

model Portfolio {
  id          String        @id @default(cuid())
  name        String
  description String?
  goal        Float?
  userId      String
  type        PortfolioType

  PortfolioStructureItem PortfolioStructureItem[]
}

model PortfolioStructureItem {
  id          String    @id @default(cuid())
  name        String
  description String?
  goal        Float?
  portfolioId String
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  Asset       Asset[]
}

model Asset {
  id   String                 @id @default(cuid())
  name String
  type PortfolioStructureItem @relation(fields: [portfolioStructureItemId], references: [id])

  portfolioStructureItemId String
  AssetDeposit             AssetDeposit[]
  AssetValue               AssetValue[]
}

model AssetDeposit {
  id     String   @id @default(cuid())
  name   String
  amount Float
  time   DateTime
  asset  Asset    @relation(fields: [assetId], references: [id])

  assetId String
}

model AssetValue {
  id    String   @id @default(cuid())
  value Float
  time  DateTime
  asset Asset    @relation(fields: [assetId], references: [id])

  assetId String
}

enum BudgetCategoryType {
  INCOME
  NECESSITY
  SAVINGS
  WANTS
  GIFTS
}

enum PortfolioType {
  EMERGENCY
  SAVINGS
  RETIREMENT
  RISK
  WEALTH
  OTHER
}
